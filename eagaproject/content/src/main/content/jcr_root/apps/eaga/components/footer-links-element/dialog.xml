<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Footer Links Element"
    width="1024"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Footer Links Element">
                <items jcr:primaryType="cq:WidgetCollection">
					<link-label
                        jcr:primaryType="cq:Widget"
                        name="title"
                        fieldLabel="Label Title"
                        width="90%"
                        allowBlank="{Boolean}false"
                        xtype="textfield"/>
                    <multifielditems
                        jcr:primaryType="cq:Widget"
                        hideLabel="false"
                        name="./footerLinksElement"
                        title="Links"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            border="true"
                            hideLabel="true"
                            layout="form"
                            padding="10px"
                            width="1000"
                            xtype="multi-field-panel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <link-label
                                    jcr:primaryType="cq:Widget"
                                    dName="label"
                                    fieldLabel="Label"
                                    width="90%"
                                    allowBlank="{Boolean}false"
                                    xtype="textfield"/>
                                <link-url
                                    jcr:primaryType="cq:Widget"
                                    dName="url"
                                    fieldLabel="Url"
                                    width="90%"
                                    allowBlank="{Boolean}false"
                                    xtype="pathfield"/>
                            </items>
                        </fieldConfig>
                    </multifielditems>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
