<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" 
xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cq:Dialog"
          title="Contacts"
          width="600"
          height="500"
          xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <address
                name="./address"
                jcr:primaryType="cq:Widget"
                width="400"
                fieldLabel="Address"
                xtype="textfield"/>
        <phone
            name="./phone"
            jcr:primaryType="cq:Widget"
            width="400"
            fieldLabel="Phone"
            xtype="textfield"/>
        <email
            name="./email"
            jcr:primaryType="cq:Widget"
            width="400"
            fieldLabel="Email"
            xtype="textfield"/>
    </items>
</jcr:root>
